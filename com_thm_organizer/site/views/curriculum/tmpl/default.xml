    <layout title="COM_THM_ORGANIZER_CURRICULUM_TITLE">
        <message>COM_THM_ORGANIZER_CURRICULUM_DESCRIPTION</message>
    </layout>
    <fields name="params" addfieldpath="/media/com_thm_organizer/fields">
        <fieldset name="basic" label="COM_THM_ORGANIZER_CURRICULUM_SETTINGS">
            <field
                    name="programID"
                    type="programID"
                    access="false"
                    class="inputbox"
                    label="COM_THM_ORGANIZER_PROGRAM"
                    description="COM_THM_ORGANIZER_PROGRAM_DESC"
                    required="true"/>
            <field
                    name="initialLanguage"
                    type="list"
                    default="de"
                    required="true"
                    label="COM_THM_ORGANIZER_LANGUAGE"
                    description="COM_THM_ORGANIZER_LANGUAGE_DESC">
                <option value="de">COM_THM_ORGANIZER_GERMAN</option>
                <option value="en">COM_THM_ORGANIZER_ENGLISH</option>
            </field>
            <field
                    name="displayECollabLink"
                    type="list"
                    default="0"
                    class="chzn-color-state"
                    required="true"
                    label="COM_THM_ORGANIZER_DISPLAY_ECOLLAB"
                    description="COM_THM_ORGANIZER_DISPLAY_ECOLLAB_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</metadata>