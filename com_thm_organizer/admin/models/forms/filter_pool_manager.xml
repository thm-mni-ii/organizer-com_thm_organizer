<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_organizer/fields">
        <field name="search"
               type="text"
               label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
               hint="JSEARCH_FILTER"/>
        <field name="checkbox"
               type="CheckAll"/>
        <field name="name"
               type="localizedlist"
               valueColumn="name"
               textColumn="name"
               table="thm_organizer_pools"
               label="COM_THM_ORGANIZER_NAME"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="programID"
               type="programID"
               label="COM_THM_ORGANIZER_PROGRAM"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="fieldID"
               type="genericlist"
               valueColumn="f.id"
               textColumn="f.field"
               localized="true"
               table="thm_organizer_pools AS p,thm_organizer_fields AS f ON p.fieldID = f.id"
               label="COM_THM_ORGANIZER_FIELD"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC"
               onchange="this.form.submit();"/>
    </fields>
</form>
