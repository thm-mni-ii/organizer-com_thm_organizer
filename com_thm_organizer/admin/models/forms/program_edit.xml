<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_THM_ORGANIZER_ATTRIBUTES_BASIC" addfieldpath="/libraries/thm_core/fields">
        <field name="id"
               type="hidden" />
        <field name="asset_id"
               type="hidden"
               filter="unset"/>
        <field name="departmentID"
               type="departmentID"
               label="COM_THM_ORGANIZER_DEPARTMENT"
               description="COM_THM_ORGANIZER_DEPARTMENT_DESC"
               required="true" >
            <option value="">COM_THM_ORGANIZER_FILTER_DEPARTMENT</option>
        </field>
        <field name="degreeID"
               type="genericlist"
               valueColumn="id"
               textColumn="name"
               table="thm_organizer_degrees"
               label="COM_THM_ORGANIZER_DEGREE"
               description="COM_THM_ORGANIZER_DEGREE_DESC"
               class="inputbox required"
               required="true" >
            <option value="">COM_THM_ORGANIZER_FILTER_DEGREE</option>
        </field>
        <field name="version"
               type="text"
               size="10"
               class="inputbox"
               label="COM_THM_ORGANIZER_VERSION"
               description="COM_THM_ORGANIZER_VERSION_DESC"
               required="true" />
        <field name="lsfFieldID"
               type="text"
               class="inputbox"
               size="40"
               label="COM_THM_ORGANIZER_LSF_FIELD_ID"
               description="COM_THM_ORGANIZER_LSF_FIELD_ID_DESC"
               required="true" />
        <field name="fieldID"
               type="genericlist"
               valueColumn="id"
               textColumn="field"
               table="thm_organizer_fields"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_FIELD_DESC"
               required="true" >
            <option value="">COM_THM_ORGANIZER_FILTER_FIELD</option>
        </field>
        <field name="frequencyID"
               type="list"
               label="COM_THM_ORGANIZER_FREQUENCY"
               description="COM_THM_ORGANIZER_FREQUENCY_DESC"
               default="3" >
            <option value="3">COM_THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">COM_THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">COM_THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">COM_THM_ORGANIZER_AVAILABILITY_WINTER</option>
        </field>
    </fieldset>
    <fieldset name="de" label="COM_THM_ORGANIZER_ATTRIBUTES_DE">
        <field name="subject_de"
               type="text"
               maxlength="255"
               class="inputbox required"
               label="COM_THM_ORGANIZER_NAME_DE"
               description="COM_THM_ORGANIZER_NAME_DE_DESC"
               required="true" />
        <field name="description_de"
               type="textarea"
               class="inputbox"
               label="COM_THM_ORGANIZER_DESC"
               description="COM_THM_ORGANIZER_DESC_DESC_DE" />
    </fieldset>
    <fieldset name="en" label="COM_THM_ORGANIZER_ATTRIBUTES_EN">
        <field name="subject_en"
               type="text"
               maxlength="255"
               class="inputbox required"
               label="COM_THM_ORGANIZER_NAME_EN"
               description="COM_THM_ORGANIZER_NAME_EN_DESC"
               required="true" />
        <field name="description_en"
               type="textarea"
               class="inputbox"
               label="COM_THM_ORGANIZER_DESC"
               description="COM_THM_ORGANIZER_DESC_DESC_EN" />
    </fieldset>
    <fieldset name="mapping" label="COM_THM_ORGANIZER_ATTRIBUTES_MAPPINGS" displayinitial="0"
              addfieldpath="/media/com_thm_organizer/fields">
        <field name="children"
               type="children"
               label="COM_THM_ORGANIZER_CHILDREN"
               description="COM_THM_ORGANIZER_CHILDREN_DESC" />
    </fieldset>
</form>