<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/media/com_thm_organizer/fields">
        <field
                name="search"
                type="text"
                label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />
        <field
                name="checkbox"
                type="CheckAll"/>
    </fields>
    <fields name="list">
        <field
                name="departmentID"
                type="genericlist"
                valueColumn="d.id"
                textColumn="d.short_name"
                localized="true"
                table="thm_organizer_department_resources AS dr,thm_organizer_departments AS d ON d.id = dr.departmentID"
                onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
