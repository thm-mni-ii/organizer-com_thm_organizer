<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/thm_core/fields">
        <field
            name="search"
            type="text"
            label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />
        <field
            name="name"
            type="disjunctlist"
            valueColumn="name"
            textColumn="name"
            table="users"
            notInColumn="id"
            disjunctValue="userID"
            disjunctTable="thm_organizer_users"
            label="COM_THM_ORGANIZER_NAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_NAME</option>
            <option value="">JALL</option>
        </field>
        <field
            name="username"
            type="disjunctlist"
            valueColumn="username"
            textColumn="username"
            table="users"
            notInColumn="id"
            disjunctValue="userID"
            disjunctTable="thm_organizer_users"
            label="COM_THM_ORGANIZER_USERNAME"
            onchange="this.form.submit();"
            >
            <option value="">COM_THM_ORGANIZER_FILTER_USERNAME</option>
            <option value="">JALL</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
