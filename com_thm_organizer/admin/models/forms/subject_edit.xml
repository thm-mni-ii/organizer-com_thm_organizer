<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_THM_ORGANIZER_ATTRIBUTES_SUBJECT_DETAILS"
              addfieldpath="/media/com_thm_organizer/fields">
        <field name="id"
               type="hidden"/>
        <field name="departmentID"
               type="departmentID"
               action="manage"
               label="COM_THM_ORGANIZER_DEPARTMENT"
               description="COM_THM_ORGANIZER_DEPARTMENT_DESC"
               required="true"/>
        <field name="lsfID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_LSF_ID"
               description="COM_THM_ORGANIZER_LSF_ID_DESC"/>
        <field name="externalID"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_MODULE_ID"
               description="COM_THM_ORGANIZER_MODULE_ID_DESC"/>
        <field name="duration"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_DURATION"
               description="COM_THM_ORGANIZER_DURATION_DESC"
               first="1"
               last="30"
               step="1"
               default="1">
            <option value="0">COM_THM_ORGANIZER_FILTER_CREDIT_POINTS</option>
        </field>
        <field name="instructionLanguage"
               type="list"
               label="COM_THM_ORGANIZER_INSTRUCTION_LANGUAGE"
               description="COM_THM_ORGANIZER_INSTRUCTION_LANGUAGE_DESC"
               default="D">
            <option value="D">COM_THM_ORGANIZER_GERMAN</option>
            <option value="E">COM_THM_ORGANIZER_ENGLISH</option>
        </field>
        <field name="is_prep_course"
               type="list"
               class="chzn-color-state"
               label="COM_THM_ORGANIZER_PREP_COURSES"
               description="COM_THM_ORGANIZER_PREP_COURSE_DESC"
               default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="max_participants"
               type="number"
               size="70"
               label="COM_THM_ORGANIZER_MAX_PARTICIPANTS"
               description="COM_THM_ORGANIZER_MAX_PARTICIPANTS_DESC"/>
        <field name="frequencyID"
               type="list"
               label="COM_THM_ORGANIZER_AVAILABILITY"
               description="COM_THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">COM_THM_ORGANIZER_FILTER_AVAILABILITY</option>
            <option value="3">COM_THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">COM_THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">COM_THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">COM_THM_ORGANIZER_AVAILABILITY_WINTER</option>
            <option value="4">COM_THM_ORGANIZER_AVAILABILITY_AS_NEEDED</option>
            <option value="0">COM_THM_ORGANIZER_AVAILABILITY_APPT</option>
        </field>
        <field name="fieldID"
               type="genericlist"
               valuecolumn="id"
               textcolumn="field"
               localized="true"
               table="thm_organizer_fields"
               class="inputbox"
               label="COM_THM_ORGANIZER_FIELD"
               description="COM_THM_ORGANIZER_FIELD_DESC">
            <option value="">COM_THM_ORGANIZER_FILTER_FIELD</option>
            <option value="">JNONE</option>
        </field>
        <field name="planSubjectIDs"
               type="subjectmapping"
               responsibility="1"
               label="COM_THM_ORGANIZER_PLAN_SUBJECT"/>
        <field type="spacer"
               name="spacer1"
               hr="true"/>
        <field name="creditpoints"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_CREDIT_POINTS"
               description="COM_THM_ORGANIZER_CREDIT_POINTS_DESC"
               first="1"
               last="30"
               step="1"
               default="0">
            <option value="0">COM_THM_ORGANIZER_FILTER_CREDIT_POINTS</option>
        </field>
        <field name="sws"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_SWS"
               description="COM_THM_ORGANIZER_SWS_DESC"
               first="1"
               last="30"
               step="1"
               default="0">
            <option value="0">COM_THM_ORGANIZER_FILTER_SEMESTER_HOURS</option>
        </field>
        <field name="expenditure"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_EXPENDITURE"
               description="COM_THM_ORGANIZER_EXPENDITURE_DESC"
               first="30"
               last="900"
               step="30"
               default="0">
            <option value="0">COM_THM_ORGANIZER_FILTER_EXPENDITURE</option>
        </field>
        <field name="present"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_PRESENT"
               description="COM_THM_ORGANIZER_PRESENT_DESC"
               first="0"
               last="900"
               step="30"
               default="">
            <option value="">COM_THM_ORGANIZER_FILTER_PRESENT</option>
        </field>
        <field name="independent"
               type="integer"
               class="inputbox"
               label="COM_THM_ORGANIZER_INDEPENDENT"
               description="COM_THM_ORGANIZER_INDEPENDENT_DESC"
               first="0"
               last="900"
               step="30"
               default="">
            <option value="">COM_THM_ORGANIZER_FILTER_INDEPENDENT</option>
        </field>
        <field name="frequencyID"
               type="list"
               label="COM_THM_ORGANIZER_AVAILABILITY"
               description="COM_THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">COM_THM_ORGANIZER_FILTER_AVAILABILITY</option>
            <option value="3">COM_THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">COM_THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">COM_THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">COM_THM_ORGANIZER_AVAILABILITY_WINTER</option>
            <option value="4">COM_THM_ORGANIZER_AVAILABILITY_AS_NEEDED</option>
            <option value="0">COM_THM_ORGANIZER_AVAILABILITY_APPT</option>
        </field>
        <field name="spacer2"
               type="spacer"
               hr="true"/>
        <field name="literature"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_LITERATURE"
               description="COM_THM_ORGANIZER_LITERATURE_DESC"/>
    </fieldset>
    <fieldset name="de_texts" label="COM_THM_ORGANIZER_ATTRIBUTES_DE">
        <field name="name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_NAME_DE"
               description="COM_THM_ORGANIZER_NAME_DE_DESC"
               hint="Grundlagen der Informatik"/>
        <field name="short_name_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_SHORT_NAME_DE"
               description="COM_THM_ORGANIZER_SHORT_NAME_DE_DESC"
               hint="Grundl. d. Inf."/>
        <field name="abbreviation_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_ABBREVIATION_DE"
               description="COM_THM_ORGANIZER_ABBREVIATION_DE_DESC"
               hint="GDI"/>
        <field name="method_de"
               type="text"
               class="inputbox"
               size="70"
               label="COM_THM_ORGANIZER_METHOD_DE"
               description="COM_THM_ORGANIZER_METHOD_DE_DESC"
               hint="2 SWS Vorlesung, 2 SWS Übung"/>
        <field name="preliminary_work_de"
               type="text"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_PRELIMINARY_WORK_DE"
               description="COM_THM_ORGANIZER_PRELIMINARY_WORK_DE_DESC"
               hint="Erfolgreicher Abgabe von 6 Hausübungen."/>
        <field name="proof_de"
