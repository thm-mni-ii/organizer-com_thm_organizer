               size="20"
               label="COM_THM_ORGANIZER_EVALUATION_DE"
               description="COM_THM_ORGANIZER_EVALUATION_DE_DESC"
               hint="gem. § 9 der Allg. Bestimmungen (Teil I der PO)"/>
        <field name="description_de"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_DESC_DE"
               description="COM_THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="objective_de"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_OBJECTIVE_DE"
               description="COM_THM_ORGANIZER_OBJECTIVE_DE_DESC"/>
        <field name="content_de"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_CONTENT_DE"
               description="COM_THM_ORGANIZER_CONTENT_DE_DESC"/>
        <field name="prerequisites_de"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_PREREQUISITES_DE"
               description="COM_THM_ORGANIZER_PREREQUISITES_DE_DESC"/>
        <field name="recommended_prerequisites_de"
               type="editor"
               class="inputbox"
               size="6"
               label="COM_THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE"
               description="COM_THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE_DESC"/>
        <field name="used_for_de"
